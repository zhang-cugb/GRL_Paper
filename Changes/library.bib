keywords = {10.1002/2015JB012541 and permeability,anisotropy,resistivity},
pages = {1546--1564},
title = {{Solid Earth Relating permeability and electrical resistivity in fractures using random resistor network models}},
year = {2016}
}
@article{Wennberg2016,
