doi = {10.1144/petgeo2015-003},
file = {:C$\backslash$:/Users/danie/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Wennberg et al. - 2016 - The characteristics of open fractures in carbonate reservoirs and their impact on fluid flow a discussion.pdf:pdf},
