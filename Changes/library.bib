doi = {10.1038/srep40507},
file = {:C$\backslash$:/Users/danie/Downloads/Zhang{\_}et{\_}al-2017-Scientific{\_}Reports.pdf:pdf},
issn = {2045-2322},
journal = {Nature Publishing Group},
number = {September 2016},
pages = {1--11},
publisher = {Nature Publishing Group},
title = {{A Comprehensive Numerical Model for Simulating Fluid Transport in Nanopores}},
